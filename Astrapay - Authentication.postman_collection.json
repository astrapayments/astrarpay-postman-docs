{
	"info": {
		"_postman_id": "9d495244-68aa-463e-b2f1-447c3ca0dbea",
		"name": "Astrapay - Authentication",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "31548105"
	},
	"item": [
		{
			"name": "Get Access Token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var res = pm.response.json();\r",
							"\r",
							"pm.environment.set('token', res.access_token);"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded",
						"type": "text"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "grant_type",
							"value": "client_credentials",
							"type": "text"
						},
						{
							"key": "client_id",
							"value": "{{clienteId}}",
							"type": "text"
						},
						{
							"key": "client_secret",
							"value": "{{clientSecret}}",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "https://api-sandbox.astrapay.com.br/oauth/v1/token",
					"protocol": "https",
					"host": [
						"api-sandbox",
						"astrapay",
						"com",
						"br"
					],
					"path": [
						"oauth",
						"v1",
						"token"
					]
				}
			},
			"response": []
		}
	]
}